{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@config/*": ["./src/config/*"],
      "@atoms/*": ["./src/shared-components/atoms/*"],
      "@molecules/*": ["./src/shared-components/molecules/*"],
      "@organisms/*": ["./src/shared-components/organisms/*"],
      "@enums/*": ["./src/types/enums/*"],
      "@constants/*": ["./src/types/constants/*"],
      "@layout/*": ["./src/types/layout/*"],
      "@common-element-types/*": ["./src/types/common-elements/*"],
      "@interfaces/*": ["./src/types/interfaces/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@services/*": ["./src/services/*"],
      "@store/*": ["./src/store/*"],
      "@modules/*": ["./src/modules/*"],
      "@layouts/*": ["./src/layout/*"],
      "@common-elements/*": ["./src/common-elements/*"],
      "@data/*": ["./src/data/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
